@model EntityLayer.User
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>KULLANICI GÜNCELLE</h1>
<form asp-action="Guncelle" asp-controller="User" method="post">
    <div class="mb-3">
        <label class="form-label">KULLANICI ADI </label>
        <input readonly type="text" class="form-control" asp-for="Username">
    </div>
    <div class="mb-3">
        <label class="form-label">KULLANICI ŞİFRESİ</label>
        <input type="text" class="form-control" asp-for="UserPassword">
    </div>
    <div class="mb-3">
        <label class="form-label">KULLANICI ROLÜ</label>
        <input type="text" class="form-control" asp-for="UserRole">
    </div>

    <button type="submit" class="btn btn-primary">KULLANICI GÜNCELLE </button>
</form>

