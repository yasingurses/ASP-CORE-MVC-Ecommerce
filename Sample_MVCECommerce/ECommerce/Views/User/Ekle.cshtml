@model EntityLayer.User
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>YENİ KULLANICI EKLE</h1>
<form asp-action="Ekle" asp-controller="User" method="post">
    <div class="mb-3">
        <label class="form-label">KULLANICI ADI</label>
        <input asp-for="Username" type="text" class="form-control">

    </div>
    <div class="mb-3">
        <label class="form-label">KULLANICI ŞİFRESİ</label>
        <input type="text" class="form-control" asp-for="UserPassword">
    </div>
    <div class="mb-3">
        <label class="form-label">KULLANICI ROLÜ</label>
        <input type="text" class="form-control" asp-for="UserRole">
    </div>

    <button type="submit" class="btn btn-primary">KATEGORİ EKLE</button>
</form>
